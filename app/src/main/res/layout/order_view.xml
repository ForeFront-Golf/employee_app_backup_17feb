<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/textview_order_number"
            fontPath="fonts/Montserrat_Bold.ttf"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="#"
            android:textColor="@color/fore_order_blue"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textview_order_name"
            fontPath="fonts/Montserrat_Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49dp"
            android:text="Name"
            android:textColor="@color/fore_order_blue"
            android:textSize="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/icon_location_sm_pnk" />

        <TextView
            android:id="@+id/textview_order_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:text="100m"
            android:textColor="@color/fore_order_blue_percent_50"
            android:textSize="12dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/status_circle"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/textview_order_since_time"
        android:background="@drawable/status_circle_unconfirmed" />

    <TextView
        android:id="@+id/textview_order_since_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:text="@string/mins"
        android:textColor="@color/fore_order_blue_percent_50"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textview_number_of_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="82dp"
        android:text="@string/items_out_of"
        android:textColor="@color/fore_order_blue_percent_70"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/textview_order_price"
        fontPath="fonts/Montserrat_Bold.ttf"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="12dp"
        android:gravity="right"
        android:text="$100.00"
        android:textColor="@color/fore_order_blue"
        android:textSize="16dp" />

</RelativeLayout>