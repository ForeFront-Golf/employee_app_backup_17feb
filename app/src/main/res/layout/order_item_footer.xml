<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="51dp"
    android:background="@color/fore_order_darker_white">

    <RelativeLayout
        android:id="@+id/rlayout_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/fore_order_blue_percent_70"
            android:textSize="12dp"
            android:text="@string/subtotal" />

        <TextView
            android:id="@+id/textview_subtotal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/fore_order_blue_percent_70"
            android:textSize="14dp"
            android:text="$80.00" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_hst"
        android:layout_width="wrap_content"
        android:layout_height="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/fore_order_blue_percent_70"
            android:textSize="12dp"
            android:text="@string/hst" />

        <TextView
            android:id="@+id/textview_hst_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/fore_order_blue_percent_70"
            android:textSize="14dp"
            android:text="$8.00"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/fore_order_blue"
            fontPath="fonts/Montserrat_Bold.ttf"
            android:textSize="12dp"
            android:text="@string/total" />

        <TextView
            android:id="@+id/textview_order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/fore_order_blue"
            fontPath="fonts/Montserrat_Bold.ttf"
            android:textSize="20dp"
            android:text="$88.00"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>