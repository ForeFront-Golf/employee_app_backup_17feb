<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_cart_item_name"
                fontPath="fonts/Montserrat_Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="12dp"
                android:text="@string/item_name"
                android:textColor="@color/fore_order_blue"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/llayout_option_items_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:maxWidth="@dimen/order_details_max_text_size"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/textview_cart_item_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/order_details_max_text_size"
                android:text="Special instructions something dfgjhd fhjgdj hfjhdgf jdhgfj dgfj"
                android:textColor="@color/fore_order_blue_percent_50"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_number_of_cart_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="14dp"
                android:text="1"
                android:textColor="@color/fore_order_blue" />

            <TextView
                android:id="@+id/textview_price_of_cart_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:paddingBottom="12dp"
                android:text="$5.00"
                android:textColor="@color/fore_order_blue_percent_50"
                android:textSize="14dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>