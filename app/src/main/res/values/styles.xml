<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fore_order_blue</item>
        <item name="colorPrimaryDark">@color/fore_order_dark_blue</item>
        <item name="colorAccent">@color/fore_order_grey</item>
    </style>

    <!-- Base application theme with no default action bar. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/fore_order_blue</item>
        <item name="colorPrimaryDark">@color/fore_order_dark_blue</item>
        <item name="colorAccent">@color/fore_order_grey</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
